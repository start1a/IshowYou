<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/youtube_player_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.YoutubePlayerFragment">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoPlay="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showFullScreenButton="true"
        app:showYouTubeButton="true"
        app:videoId="MHCmO-bjIPw" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.ui.views.YouTubePlayerSeekBar
        android:id="@+id/youtube_player_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:color="@color/colorPrimary"
        app:fontSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayerView" />

    <Button
        android:id="@+id/btnHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="호스트"
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayerView" />

    <Button
        android:id="@+id/btnSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="감지"
        app:layout_constraintTop_toBottomOf="@+id/btnHost" />

</androidx.constraintlayout.widget.ConstraintLayout>